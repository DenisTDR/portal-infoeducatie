@model List<InfoEducatie.Main.Seminars.SeminarViewModel>


<div class="container">
    <div class="row">
        <h1 class="mt-3">Seminarii</h1>
    </div>
    <div class="row">
        @foreach (var seminarViewModel in Model)
        {
            <div class="col-12 col-sm-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="text-center">@seminarViewModel.Name</h5>
                        <div class="text-right">@seminarViewModel.Speaker</div>
                        <div>@seminarViewModel.ShortDescription</div>
                        <div class="d-flex justify-content-between">
                            <a href="@seminarViewModel.Link" target="_blank">Link</a>
                            <a asp-action="Details" asp-route-id="@seminarViewModel.Slug">Mai multe detalii</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>